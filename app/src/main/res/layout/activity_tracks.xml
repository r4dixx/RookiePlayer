<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tracks_container"
    style="@style/PageLayoutTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TracksActivity">

    <RelativeLayout
        android:id="@+id/tracks_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tracks_title"
            style="@style/PageTitleTheme"
            android:text="@string/title_tracks" />

        <ListView
            android:id="@+id/tracks_list"
            style="@style/ListViewTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tracks_title"
            android:orientation="vertical" />

    </RelativeLayout>

    <include
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
